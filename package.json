{
  "name": "ss_gold",
  "version": "1.5.7",
  "main": "main.js",
  "author": "Shyam Sundar",
  "description": "gold testing application",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && yarn dev",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dev": "cross-env ELECTRON_START_URL=http://localhost:3000 concurrently \"yarn client\" \"yarn server\" \"yarn electron\"",
    "prebuild": "if exist dist ( rmdir /s /q dist )",
    "build": "electron-builder",
    "postinstall": "cd server && yarn install"
  },
  "dependencies": {
    "electron-log": "^5.4.1",
    "electron-store": "^10.1.0",
    "node-fetch": "2",
    "openai": "^5.15.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.9",
    "wait-on": "^8.0.3"
  },
  "license": "MIT",
  "build": {
    "appId": "com.example.ss-gold",
    "productName": "SS Gold",
    "win": {
      "target": "nsis",
      "icon": "client/src/assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SS Gold"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash-preload.js",
      "splash.html",
      "client/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "server/",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules/"
        ]
      },
      {
        "from": "server/node_modules/",
        "to": "server/node_modules/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "client/src/assets",
        "to": "assets"
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
