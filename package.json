{
  "name": "ss_gold",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && yarn dev",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dev": "cross-env ELECTRON_START_URL=http://localhost:3000 concurrently \"yarn client\" \"yarn server\" \"yarn electron\"",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.4.1",
    "electron-store": "7",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.2.0",
    "nodemon": "^3.1.9",
    "wait-on": "^8.0.3"
  },
  "license": "MIT",
  "build": {
    "appId": "com.example.ss-gold",
    "productName": "SS Gold",
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "client/dist",
      "node_modules",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
